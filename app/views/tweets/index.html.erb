<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <h1>ツイート一覧</h1>

    <%= link_to "ツイートする", new_tweet_path, class: 'btn btn-primary' %>

    <% @tweets.each do |tweet| %>
      <div class="row">
        <p><%= tweet.content %></p>

        <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>

        <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: 'このツイートを削除してよろしいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      </div>
    <% end %>

  </div>
</div>

<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
